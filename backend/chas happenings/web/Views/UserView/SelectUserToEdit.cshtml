@{
    ViewBag.Title = "Find User to Edit";
}

<h2>Find User to Edit</h2>

<form asp-action="EditUser" method="get">
    <div class="mb-3">
        <label>User ID:</label>
        <input type="number" name="id" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Username:</label>
        <input type="text" name="username" class="form-control" />
    </div>

    <button type="submit" class="btn btn-danger">Find User</button>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
