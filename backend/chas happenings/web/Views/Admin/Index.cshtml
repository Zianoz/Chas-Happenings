<script>
    function showSection(sectionId) {
        // Hide all sections
        document.querySelectorAll('.content-section').forEach(section => {
            section.classList.add('d-none');
        });
        
        // Remove active class from all buttons
        document.querySelectorAll('.admin-nav-btn').forEach(btn => {
            btn.classList.remove('active');
        });
        
        // Show selected section
        document.getElementById(sectionId).classList.remove('d-none');
        
        // Add active class to clicked button
        event.target.classList.add('active');
        
        // Update title and subtitle based on section
        updateSectionTitle(sectionId);
    }
    
    function updateSectionTitle(sectionId) {
        const titleElement = document.getElementById('content-title');
        const subtitleElement = document.getElementById('content-subtitle');
        
        const titles = {
            'event-management': {
                title: '<i class="fas fa-calendar-day me-2"></i>Event Management',
                subtitle: 'Manage events, schedules, and activities'
            },
            'user-management': {
                title: '<i class="fas fa-user-cog me-2"></i>User Management',
                subtitle: 'Manage user accounts and permissions'
            },
            'comment-management': {
                title: '<i class="fas fa-comments me-2"></i>Comment Management',
                subtitle: 'Moderate and manage user comments'
            },
            'tag-management': {
                title: '<i class="fas fa-tags me-2"></i>Tag Management',
                subtitle: 'Organize and manage content tags'
            }
        };
        
        if (titles[sectionId]) {
            titleElement.innerHTML = titles[sectionId].title;
            subtitleElement.textContent = titles[sectionId].subtitle;
        }
    }
</script>




