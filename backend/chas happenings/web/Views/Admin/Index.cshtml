@model IEnumerable<Domain.Models.User>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Sidebar Navigation -->
        <div class="col-md-3 col-lg-2">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-user-shield me-2"></i>Admin Menu
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <!-- Event Management Button -->
                        <button type="button" 
                                class="list-group-item list-group-item-action admin-nav-btn active" 
                                onclick="showSection('event-management', this)"
                                style="border-left: 4px solid #1976d2;">
                            <i class="fas fa-calendar-day me-2" style="color: #1976d2;"></i>
                            Event Management
                        </button>

                        <!-- User Management Button -->
                        <button type="button" 
                                class="list-group-item list-group-item-action admin-nav-btn" 
                                onclick="showSection('user-management', this)"
                                style="border-left: 4px solid #7b1fa2;">
                            <i class="fas fa-user-cog me-2" style="color: #7b1fa2;"></i>
                            User Management
                        </button>

                        <!-- Comment Management Button -->
                        <button type="button" 
                                class="list-group-item list-group-item-action admin-nav-btn" 
                                onclick="showSection('comment-management', this)"
                                style="border-left: 4px solid #f57c00;">
                            <i class="fas fa-comments me-2" style="color: #f57c00;"></i>
                            Comment Management
                        </button>

                        <!-- Tag Management Button -->
                        <button type="button" 
                                class="list-group-item list-group-item-action admin-nav-btn" 
                                onclick="showSection('tag-management', this)"
                                style="border-left: 4px solid #388e3c;">
                            <i class="fas fa-tags me-2" style="color: #388e3c;"></i>
                            Tag Management
                        </button>
                    </div>
                </div>
            </div>

            <!-- Logout Button -->
            <div class="mt-3">
                <form asp-controller="Admin" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-outline-danger w-100 py-2">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </button>
                </form>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="col-md-9 col-lg-10">
            <!-- Header with Search Bar -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="h3 mb-1 text-primary" id="content-title">
                        <i class="fas fa-calendar-day me-2"></i>Event Management
                    </h2>
                    <p class="text-muted mb-0" id="content-subtitle">Manage events, schedules, and activities</p>
                </div>
                <div class="d-flex align-items-center">
                    <!-- Search Bar -->
                    <div class="input-group me-3" style="width: 300px;">
                        <input type="text" class="form-control" placeholder="Search..." id="searchInput">
                        <button class="btn btn-outline-primary" type="button" onclick="performSearch()">
                            <i class="fas fa-search"></i>
                        </button> 
                    </div>
                    <div class="text-muted small">
                        <i class="fas fa-shield-alt text-primary me-1"></i>
                        Last login: @DateTime.Now.ToString("MMM dd, yyyy 'at' hh:mm tt")
                    </div>
                </div>
            </div>

            <!-- Dynamic Content Sections -->
            
            <!-- Event Management Content -->
            <div id="event-management" class="content-section">
                <div class="row g-3">
                    <div class="col-md-6 col-lg-3">
                        <a asp-controller="Event" asp-action="Create" class="btn btn-primary w-100 py-3">
                            <i class="fas fa-plus-circle me-2"></i>Add Event
                        </a>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <a asp-controller="Event" asp-action="Delete" class="btn btn-danger w-100 py-3">
                            <i class="fas fa-trash me-2"></i>Delete Event
                        </a>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <a asp-controller="Event" asp-action="Edit" class="btn btn-warning w-100 py-3">
                            <i class="fas fa-edit me-2"></i>Update Event
                        </a>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <a asp-controller="Event" asp-action="Index" class="btn btn-info w-100 py-3">
                            <i class="fas fa-list me-2"></i>All Events
                        </a>
                    </div>
                </div>

                <!-- Event Search Results (Example) -->
                <div class="mt-4">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="fas fa-search me-2"></i>Search Results</h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-0">Search results for events will appear here...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Management Content -->
            <div id="user-management" class="content-section d-none">
                <div class="row g-3">
                    <div class="col-md-6 col-lg-3">
                        <a asp-controller="UserView" asp-action="CreateUser" class="btn btn-primary w-100 py-3">
                            <i class="fas fa-user-plus me-2"></i>Add User
                        </a>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <a asp-controller="UserView" asp-action="DeleteUser" class="btn btn-danger w-100 py-3">
                            <i class="fas fa-user-times me-2"></i>Delete User
                        </a>
                    </div>
