                                <div class="col text-center fw-bold text-muted"><small>W</small></div>
                                <div class="col text-center fw-bold text-muted"><small>T</small></div>
                                <div class="col text-center fw-bold text-muted"><small>F</small></div>
                                <div class="col text-center fw-bold text-muted"><small>S</small></div>
                                <div class="col text-center fw-bold text-muted"><small>S</small></div>
                            </div>
                            <div class="row g-1">
                                <div class="col text-center"><span class="calendar-date">1</span></div>
                                <div class="col text-center"><span class="calendar-date">2</span></div>
                                <div class="col text-center"><span class="calendar-date">3</span></div>
                                <div class="col text-center"><span class="calendar-date">4</span></div>
                                <div class="col text-center"><span class="calendar-date text-primary fw-bold">5</span></div>
                                <div class="col text-center"><span class="calendar-date">6</span></div>
                                <div class="col text-center"><span class="calendar-date">7</span></div>
