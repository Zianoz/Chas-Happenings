<!-- Welcome Section -->
<section class="welcome-section py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="intro-card p-5 rounded shadow bg-white position-relative calendar-theme">
                    <!-- Calendar Grid Background -->
                    <div class="calendar-grid-bg"></div>

                    <!-- Calendar Header Styling -->
                    <div class="calendar-header mb-4 pb-3 border-bottom">
                        <div class="text-center">
                            <h1 class="display-4 mb-2 text-primary">
                                <i class="fas fa-calendar-alt me-3"></i><strong>Chas Happenings</strong>
